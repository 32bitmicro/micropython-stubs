    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: file as Module",
            "type": "python",
            "request": "launch",
            "module": "stubber.${fileBasenameNoExtension}",
            "justMyCode": false
        },
        {
            "name": "Python: Current File from root",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["-l"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: publish board",
            "type": "python",
            "request": "launch",
            "program": "./publish/publish_stubs.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--pypi",
                "-V",
                "1.16",
                "--dry-run",
                "--type",
                "board"
            ]
        }
        {
            "name": "Python: publish 1.19.1 docs",
            "type": "python",
            "request": "launch",
            "program": "./publish/publish_stubs.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--pypi",
                "-V",
                "1.19.1",
                "--dry-run",
                "--type",
                "doc"
            ]
        }
    ]
}