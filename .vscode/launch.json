    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: file as Module",
            "type": "python",
            "request": "launch",
            "module": "stubber.${fileBasenameNoExtension}",
            "justMyCode": false
        },
        {
            "name": "Python: Current File from root",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}